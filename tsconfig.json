{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "target": "ES2019",
    "module": "nodenext",
    "moduleResolution": "Node16",
  },
  "include": ["src"],
}
